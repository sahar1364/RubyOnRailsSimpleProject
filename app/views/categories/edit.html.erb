<h1>Editing article</h1>
 
<%= form_for :category, url: category_path(@category), method: :patch do |f| %>
  <p>
    <%= f.label :Name %><br>
    <%= f.text_field :Name %>
  </p>
  <p>
    <%= f.label :Priority %><br>
    <%= f.text_field :Priority %>
  </p>
  <p>
    <%= f.label :Description %><br>
    <%= f.text_area :Description %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
 
<%= link_to 'Back', categories_path %>
